// Place your settings in this file to overwrite the default settings
{
	"editor.formatOnSave": true,
	"editor.tabCompletion": "on",
	"editor.tabSize": 2,
	"files.autoSave": "onFocusChange",
	"files.exclude": {
		".vscode": true
	},
	"git.autofetch": true,
	"search.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"node_modules": true,
		"dist": true,
		".happypack": true,
		".vscode": true,
		"npm-debug.log": true,
		"**/static/*": true
	},
	"telemetry.enableTelemetry": false,
	"window.zoomLevel": 1,
	"workbench.iconTheme": "material-icon-theme"
}
